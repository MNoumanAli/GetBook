@model List<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <p class="fw-bold">@product.Title</p>
                        <p>@product.ISBN</p>
                        <div>
                            <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary border rounded">Detail</a>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    }
</div>
