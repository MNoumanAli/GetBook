@model Product

<div class="row pb-2">
    <h2 class="text-primary">Delete Product</h2>
    <hr />
</div>
<form method="post">
    <div class="p-3 m-4">
        <input asp-for="Id" hidden />
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Title"></label>
            <input asp-for="Title" class="form-control" disabled>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Description"></label>
            <input asp-for="Description" class="form-control" disabled>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" disabled>
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Price"></label>
            <input asp-for="Price" class="form-control" disabled>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </div>
    </div>
</form>