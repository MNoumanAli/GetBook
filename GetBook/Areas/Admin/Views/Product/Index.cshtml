@model List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h3>
                Product List
            </h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Add New Product </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description  
            </th>
             <th>
                Author  
            </th>
            <th>
                ISBN
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Author</td>
                <td>@item.ISBN</td>
                <td>@item.Price</td>
                <td>
                    <div class="w-75 btn-group" group="role">
                        <a class="btn btn-primary mx-2" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a class="btn btn-danger mx-2" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
