@model ProductVM

<div class="row pb-2">
    <h2 class="text-primary">Edit Product</h2>
    <hr />
</div>
<form method="post">
    <div class="p-3 m-4">
        <input hidden asp-for="Product.Id" class="form-control">
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.Title"></label>
            <input asp-for="Product.Title" class="form-control">
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.Author"></label>
            <input asp-for="Product.Author" class="form-control">
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.Description"></label>
            <input asp-for="Product.Description" class="form-control">
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.ISBN"></label>
            <input asp-for="Product.ISBN" class="form-control">
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.ListPrice"></label>
            <input asp-for="Product.ListPrice" class="form-control">
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.Price50"></label>
            <input asp-for="Product.Price50" class="form-control">
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.Price100"></label>
            <input asp-for="Product.Price100" class="form-control">
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.Price"></label>
            <input asp-for="Product.Price" class="form-control">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.CategoryId"></label>
            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control">
                <option disabled selected>@Model.Product.Category.Name</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 row text-dark">
            <label class="p-0" asp-for="Product.ImageURL"></label>
            <input asp-for="Product.ImageURL" class="form-control">
            <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Update </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}